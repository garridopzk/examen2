<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:padding="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="Seleccione un rango de edad"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/button_0_12"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="-200dp"
            android:text="0 - 12 años"
            android:backgroundTint="#FFC107"
            android:textColor="#000000"
            android:layout_marginBottom="100dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="-150dp"
            android:src="@drawable/intensamente"/>

        <Button
            android:id="@+id/button_13_17"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-200dp"
            android:text="13 - 17 años"
            android:backgroundTint="#FF5722"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="-50dp"
            android:src="@drawable/coraline"/>

        <Button
            android:id="@+id/button_18_25"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-200dp"
            android:text="18 - 25 años"
            android:backgroundTint="#E736F4"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="-30dp"
            android:src="@drawable/it"/>

    </LinearLayout>
</ScrollView>
